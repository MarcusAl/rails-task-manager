<%= form_for(@task) do |t| %>
  <%= t.text_field :title, :required => true, placeholder: 'Title' %>
  <%= t.text_field :details, :required => true, placeholder: 'Details' %>
  <%= t.label :completed, "Mark As Completed" %>
  <%= t.radio_button :completed, true %>
  <%= t.submit 'Update Task' %>
<% end %>

<%= link_to 'Back to list', tasks_path  %>